html.PMDM-Enabled body {
    .title {
        color: var(--textcolor1);
    }
    .list-opener {
        color: var(--textcolor1);
        border-color: var(--accent2) !important;
        &:hover {
            background: var(--hover1);
        }
    }

    .description {
        color: var(--textcolor2) !important;
    }

    .list {
        background: var(--bgcolor2);
        box-shadow-color: var(--bgcolor2);
    }
    .text {
        color: var(--textcolor1);
    }
}
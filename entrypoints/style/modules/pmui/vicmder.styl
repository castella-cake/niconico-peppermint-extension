.pm-viCommanderContainer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
    height: 32px;
}
#pm-vicommander {
    width: 100%;
    height: 100%;
    font-size: 16px;
    line-height: 32px;
    background: rgba(0,0,0,0.25);
    border: none;
    backdrop-filter: blur(10px);
    font-family: 'HackGen Console NF','Consolas','Meiryo',monospace;
    color: #fafafa;
}
.pm-viCommanderError {
    position: fixed;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,0.25);
    backdrop-filter: blur(10px);
    padding: 8px;
    line-height: 20px;
    font-size: 16px;
    color: #f00;
    animation: blink 0.1s normal 3;
    font-family: 'HackGen Console NF','Consolas','Meiryo',monospace
}
.pm-viCommanderOutput {
    position: fixed;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,0.25);
    backdrop-filter: blur(10px);
    padding: 8px;
    line-height: 20px;
    font-size: 16px;
    color: #0f0;
    font-family: 'HackGen Console NF','Consolas','Meiryo',monospace
}
{
    "manifest_version": 2,
    "name": "Niconico-PepperMint+",
    "short_name": "PepperMint+",
    "description": "ニコニコ動画をもっとクールにする拡張機能",
    "version": "1.6.0",
    "version_name": "1.6.0",
    "developer": {
        "name": "CYakigasi"
    },

    "homepage_url": "https://github.com/castella-cake/niconico-peppermint-extension",
    "icons": {
        "64": "icons/peppermint-logo-64.png"
    },

    "background": {
        "scripts": ["lib/jquery-3.6.3.min.js","js/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://*.nicovideo.jp/*"],
            "js": ["lib/jquery-3.6.3.min.js","lib/jquery-ui.min.js","js/forall.js"],
            "run_at": "document_start",
            "all_frames" : true
        },
        {
            "matches": ["*://*.nicovideo.jp/*"],
            "js": ["js/forall_waitdom.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://dic.nicovideo.jp/*"],
            "js": ["js/nicopedia.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://dic.nicovideo.jp/*"],
            "js": ["js/nicopedia_end.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/video_top*"],
            "js": ["js/video_top.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/ranking*"],
            "js": ["js/ranking.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/search/*", "*://www.nicovideo.jp/tag/*", "*://www.nicovideo.jp/mylist_search/*"],
            "js": ["js/searchpage.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://www.nicovideo.jp/watch/*"],
            "js": ["js/watch.js"],
            "run_at": "document_end"
        },
        {            
            "matches": ["*://www.nicovideo.jp/watch/*"],
            "js": ["js/watch_first.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["*://www.nicovideo.jp/watch/*"],
            "js": ["js/watch_idle.js"],
            "run_at": "document_idle"
        },
        {
            "matches": ["*://*.nicovideo.jp/series/*"],
            "js": ["js/series.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://live.nicovideo.jp/*"],
            "js": ["js/live.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://sp.nicovideo.jp/watch/*"],
            "js": ["js/spredirect.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "pagemod/*"
    ],

    "browser_action": {
        "browser_style": true,
        "default_popup": "pages/quickpanel.html",
        "default_icon": {
            "32": "icons/peppermint-logo-32.png",
            "64": "icons/peppermint-logo-64.png",
            "128": "icons/peppermint-logo-128.png"
        },
        "default_title": "Niconico-PepperMint"
    },
    "options_ui": {
        "page": "pages/option.html",
        "browser_style": true
    },
    
    "permissions": [
        "storage",
        "contextMenus",
        "https://ext.nicovideo.jp/api/getthumbinfo/*",
        "https://www.nicovideo.jp/ranking/*",
        "https://nvapi.nicovideo.jp/v1/series/*",
        "https://fonts.googleapis.com/icon",
        "alarms",
        "tabs"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "niconico-peppermint@cyakigasi.net"
        }
    }
}

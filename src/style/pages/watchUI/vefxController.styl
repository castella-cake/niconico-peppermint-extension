.vefx-container {
    display: flex;
    flex-direction: column;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    padding: 0;
    height: 100%;
    width: 25%;
    z-index: 2;
    margin: 0;
    min-width: 16em;
}
.vefx-container-inner {
    padding: 16px;
    background: rgba(255,255,255,0.867);
    color: #000;
    height: 100%;
    backdrop-filter: blur(8px);
    > .vefx-slidercontainer {
        display: flex;
        input[type="range"] {
            flex: 1;
        }
        label {
            flex: 0.6
        }
    }
    > label {
        display: block;
    }
    .vefx-title {
        font-weight: bold;
        margin-bottom: 16px;
    }
}
.vefx-effectdisplay {
    background: var(--bg);
    color: var(--color);
    padding: 6px 8px;
    margin-left: 4px;
    font-family: Hack, Consolas, monospace;
    border-radius: 2px;
    text-align: center;
    margin-bottom: 16px;
}
.vefx-effectdisplay[is-glowing="true"] {
    box-shadow: 0px 0px 8px var(--bg);
}
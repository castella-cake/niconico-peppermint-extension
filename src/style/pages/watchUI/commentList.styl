.commentlist-container {
    background: var(--bgcolor2);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    border-radius: var(--radius);
    max-height: 100%;
}

[watch-type="recresc"] .commentlist-container, [watch-type="3col"] .commentlist-container {
    flex: 1;
}

.commentlist-title-container {
    padding: 10px 12px;
    box-shadow: 0px 0px 8px #000;
}

.commentlist-list-container {
    overflow: hidden scroll;
    .commentlist-list-item {
        padding: 4px;
        border-bottom: 1px solid var(--accent2);
        display: flex;
        max-width: 100%;
        height: 1.6em;
        align-items: center;
        gap: 4px;
        .commentlist-list-item-body {
            flex: 1;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .commentlist-list-item-vpos {
            color: var(--textcolor2);
            background: transparent;
            border: none;
            cursor: pointer;
            font-family: inherit;
        }
        .commentlist-list-item-vpos:hover {
            text-decoration: underline
        }
    }
    .commentlist-list-item[nicoru-count="1"] {
        background: var(--nicoru1)
    }
    .commentlist-list-item[nicoru-count="2"] {
        background: var(--nicoru2)
    }
    .commentlist-list-item[nicoru-count="3"] {
        background: var(--nicoru3)
    }
    .commentlist-list-item[nicoru-count="4"] {
        background: var(--nicoru4)
    }
    
    .commentlist-list-item-open {
        height: inherit;
        min-height: 1.6em;
        flex-wrap: wrap;
        .commentlist-list-item-body {
            white-space: normal;
        }
        .commentlist-list-item-stats {
            flex: 100%;
            opacity: 0.8;
            font-size: 0.9em;
        }
    }
}

.commentlist-list-item-nicorubutton {
    flex: 0.1;
    background: none;
    border: none;
    color: var(--textcolor1);
    border-radius: var(--radius-mini);
    cursor: pointer;
    font-family: inherit;
    line-height: 1.5em;
    font-size: 0.9em;
    white-space: nowrap;
}
.commentlist-list-item-nicorubutton:hover {
    background: var(--hover1);
}
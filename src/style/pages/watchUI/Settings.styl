.playersettings-container {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 30%;
    height: 100%;
    background: rgba(0,0,0,0.867);
    color: #fff
    backdrop-filter: blur(8px);
    padding: 16px;
    z-index: 2;
    p {
        font-size: 0.9em;
    }
    .playersettings-item {
        margin-bottom: 8px;
        label {
            font-size: 0.8em;
            select {
                margin-left: 8px;
                background: #333;
                color: #fff;
                border-radius: 6px;
                padding: 4px;
                border: none;
            }
        }
        .playersettings-hint {
            font-size: 0.8em;
        }
    }
}
.playersettings-title {
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 8px;
}
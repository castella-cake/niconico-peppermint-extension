.videoinfo-container {
    background: var(--bgcolor2);
    padding: 16px;
    margin-top: 8px;
    border-radius: 6px;

    .videotitle {
        font-size: 20px;
        font-weight: bold;
        span {
            font-size: 14px;
            opacity: 0.5;
            font-weight: normal;
        }
    }
    details {
        margin: 8px 0;
        border-radius: 6px;
        border: 2px solid var(--accent1);
        padding: 0;
        summary {
            padding: 8px 16px;
            border-radius: 4px;
        }
        summary:hover {
            background: var(--hover1);
            cursor: pointer;
        }
    }

}
.videoinfo-owner {
    margin-left: 16px;
    border-left: 2px solid var(--accent1);
    padding-left: 16px;
    position: relative;
    img {
        width: 3em;
        margin-right: 8px;
        border-radius: 6px;
    }
    > a {
        text-decoration: none;
        > * {
            vertical-align: middle;
        }
    }
}
.tags-container {
    display: flex;
    flex-wrap: wrap;
    line-height: 24px;
    gap: 4px;
    background: var(--bgcolor1);
    border-radius: 8px;
    padding: 8px 16px;

    .tags-item {
        margin-right: 8px;
        border-bottom: 2px solid var(--accent1)
        a {
            text-decoration: none;
        } 
        .tags-item-nicodic {
            background: #b81414;
            border-radius: 2px;
            color: #fff;
            font-size: 0.7em;
            padding: 1px 2px;
        }
        .tags-item-nicodic.tags-item-nicodic-notexist {
            background: var(--accent1);
        }
    }
    .tags-item-locked {
        border-bottom: 2px solid rgba(255, 255, 0, 0.5)
    }
}

.videoinfo-titlecontainer {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
}
.videoinfo-titleinfo {
    flex: 1;
    min-width: 240px;
}
.videostats {
    span {
        margin-right: 0.4em;
        border-left: 2px solid var(--accent2);
        padding-left: 0.3em;
        color: var(--textcolor2);
        .tabler-icon {
            vertical-align: text-top;
            height: 1.2em;
            margin-right: 0.1em;
        }
    }
}

.videoinfo-actions button {
    background: var(--bgcolor3);
    color: var(--textcolor1);
    border: none;
    border-radius: 6px;
    padding: 4px 8px;
    svg,span {
        vertical-align: middle
    }
    span {
        margin-left: 0.5em
    }
}
.videoinfo-actions button:hover {
    background: var(--bgcolor1);
    color: var(--textcolor1);
    cursor: pointer;
}

.videodesc {
    overflow: hidden;
    overflow-wrap: break-word;
    padding: 16px;
}

[watch-type="recresc"] .videoinfo-container {
    flex-basis: 100%;
    padding: 0;
    margin: 0 7.5%;
}

[watch-type="recresc"] .videoinfo-container, [watch-type="3col"] .videoinfo-container {
    background: transparent;
}

[watch-type="resp"] .videoinfo-container {
    margin-bottom: 8px;
}

[watch-type="3col"] .videoinfo-container {
    position: absolute;
    overflow: hidden;
    width: calc(100% - 32px);
}

.videoinfo-likethanks-outercontainer {
    position: absolute;
    right: 0;
    left: -25vw;
    display: flex;
    flex-direction: row-reverse;
    pointer-events: none;
}

.videoinfo-likethanks-container {
    padding: 8px;
    background: var(--bgcolor2);
    border-radius: 6px;
    margin-top: 1em;
    position: relative;
    font-size: 0.9em;
    pointer-events: all;
    box-shadow: 0px 0px 8px var(--bgcolor1);
}

.videoinfo-likethanks-container:before {
    content: "";
    background: var(--bgcolor2);
    clip-path: polygon(50% 0, 100% 100%, 0 100%);
    top: -1em;
    height: 2em;
    width: 2em;
    right: 0.5em;
    position: absolute;
}

.videoinfo-likethanks-body {
    font-size: 1rem;
    background: var(--accent1);
    border-radius: 4px;
    padding: 4px 8px;
    margin-top: 6px;
}
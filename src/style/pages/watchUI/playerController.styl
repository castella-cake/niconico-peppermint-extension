.playercontroller-container {
    margin-top: 4px;
}
.playercontroller-container-top {
    display: flex;
    padding: 4px;
    gap: 8px;
    align-items: center;
    .playercontroller-seekbar {
        flex: 1
    }
    .playercontroller-time {
        font-size: 0.9em;
    }
}
.playercontroller-container-middle {
    display: flex;
}
.playercontroller-container-left {
    justify-content: start;
}
.playercontroller-container-center {
    justify-content: center;
}
.playercontroller-container-right {
    justify-content: end;
}
.playercontroller-container-right, .playercontroller-container-left, .playercontroller-container-center {
    display: flex;
    align-items: center;
    flex: 1
    button {
        display: block;
        background: transparent;
        border: none;
        color: var(--textcolor1);
        vertical-align: middle;
        padding: 5px 8px;
        border-radius: 8px;
        svg {
            vertical-align: middle;
        }
    }
    button:hover {
        background: var(--hover1);
        cursor: pointer;
    }
    
    .playercontroller-qualityselect {
        padding: 8px;
        margin: 0 8px;
        background: var(--bgcolor2);
        color: var(--textcolor2);
        border: none;
        border-radius: 4px;
        font-family: inherit;
        font-size: inherit;
        cursor: pointer;
    }
    .playercontroller-qualityselect:hover, .playercontroller-qualityselect:focus {
        background: var(--hover1);
        color: var(--textcolor1);
    }
}


.playercontroller-effectchange {
    display: flex !important;
    align-items: center;
    background: transparent;
    border: none;
    color: var(--textcolor1);
    padding: 4px;
    vertical-align: middle;
    border-radius: 4px;
}

.playercontroller-effectchange:hover {
    background: var(--hover1)
}

.playercontroller-qualitydisplay {
    color: var(--textcolor2)
    margin-right: 8px;
}

.playercontroller-volume-container {
    .playercontroller-volume {
        max-width: 100px;
    }
    span {
        vertical-align: middle;
    }
}

.seekbar {
    flex: 1;
    background: var(--bgcolor3);
    height: 0.7em;
    position: relative;
    border-radius: 4px;
    cursor: pointer
}

.seekbar-played {
    height: 100%;
    background: var(--linktext3);
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 4px;
}

.seekbar-buffered {
    height: 100%;
    background: var(--textcolor1);
    border-radius: 4px;
    opacity: 0.5;
}

.seekbar-commentstats {
    position: absolute;
    bottom: 22px;
    left: 0;
    right: 0;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.25s ease
} 

.seekbar:hover {
    .seekbar-commentstats.global-flex {
        background: linear-gradient(0deg, rgba(0,0,0,0.667), rgba(0,0,0,0.333));
        /* height: 10px; */
        align-items: end;
        gap: 4px;
        padding: 0px 8px;
        border-radius: 8px 8px 0 0;
        opacity: 1;

        span {
            height: calc(var(--height) * 2);
            background: #fff;
            border-radius: 6px 6px 0 0;
            opacity: 0.7;
        }
    }
}

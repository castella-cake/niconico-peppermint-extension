body {
    background: var(--bgcolor1);
    color: var(--textcolor1);
    --radius: 6px;
    --radius-mini: 4px;
    --radius-big: 8px;
    margin: 0;
}
// font-family を Stylus-langが正しく解釈しないようなので、@cssを使う
@css {
    body {
        font-family: Avenir, Lato, -apple-system, BlinkMacSystemFont, "Helvetica Neue", "Hiragino Kaku Gothic ProN", Meiryo, メイリオ, sans-serif
    }
}
a {
    color: var(--linktext1)
}

.container {
    margin: 0 auto;
    //overflow: scroll;
}
.container.fullscreen {
    overflow: hidden;
}
html.PMDMP-light .container.fullscreen {
    --bgcolor1: #252525;
    --bgcolor2: #333;
    --bgcolor3: #666;
    --bgcolor4: #aaa;
    --textcolor1: #fff;
    --textcolor2: #ddd;
    --textcolor3: #aaa;
    --accent1: #444;
    --accent2: #888;
    --hover1: #666;
    --hover2: #aaa;
    --linktext1: #8fb9df;
    --linktext2: #8ed9ff;
    --linktext3: #008acf;
}
.global-flex {
    display: flex
    .global-flex1 {
        flex: 1
    }
}
.global-bold {
    font-weight: bold;
}

.watch-container {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: center;
    margin: 0 auto;
    max-width: 98vw;
    .watch-container-top {
        flex-basis: 100%;
        margin: 0 7.5%;
        display: flex;
        overflow: hidden;
        gap: 2em;
        .watch-container-top-right {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
    }
    .watch-container-left {
        min-width: 480px;
        flex: 0.6;
    }
    .watch-container-right {
        max-width: 25vw;
        height: auto;
        align-self: stretch;
        position: relative;
        min-width: 400px;
        flex: 0.4;
    }
    .watch-container-bottom {
        flex-basis: 100%;
        margin: 0 7.5%;
        overflow: hidden;
    }

    ::-webkit-scrollbar {
        background: var(--bgcolor3)
        width: 16px;
        height: 16px;
    }
    ::-webkit-scrollbar-thumb {
        background: var(--textcolor3)
        border-radius: var(--radius-mini);
        margin: 0 4px;
    }
}

.stacker-wrapper {
    flex: 1;
    overflow: hidden;
    position: relative;
    min-height: 640px;
}
.stacker-container {
    overflow: hidden;
    display: flex;
    flex-direction: column;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    .stacker-content {
        overflow: hidden;
        flex: 1;
        display: flex;
        flex-direction: column;
    }
}
.stacker-tabbutton-container {
    display: flex;
    gap: 8px;
    margin: 0 var(--radius-big);
    .stacker-tabbutton {
        background: var(--accent1);
        color: var(--textcolor1);
        border: none;
        padding: 4px 8px;
        border-radius: var(--radius) var(--radius) 0 0;
        cursor: pointer;
        font-size: 0.9em;
        align-self: end;
        flex: 1;
    }

    .stacker-tabbutton:hover {
        background: var(--hover1);
    }

    .stacker-tabbutton.stacker-tabbutton-active {
        background: var(--bgcolor2);
        font-weight: bold;
        font-size: 1em;
    }
}

.watch-container[watch-type="3col"], .watch-container[watch-type="recresc"], .watch-container[watch-type="shinjuku"] {
    .stacker-wrapper {
        min-height: 0;
    }
}

.watch-container:not([watch-type="3col"]):not([watch-type="shinjuku"]) {
    &[settings-size="0"] .watch-container-left {
        flex: 0.4
    }
    &[settings-size="1"] .watch-container-left {
        flex: 0.6
    }
    &[settings-size="2"] .watch-container-left {
        flex: 1
    }
}

.watch-container[watch-type="shinjuku"] {
    &[settings-size="0"] .watch-container-middle {
        flex-basis: 60%
    }
    &[settings-size="1"] .watch-container-middle {
        flex-basis: 80%
    }
    &[settings-size="2"] .watch-container-middle {
        flex-basis: 100%
    }
}


[watch-type="3col"] {
    .watch-container-left {
        flex: 0.2;
        min-width: 0;
        align-self: stretch;
        /* height: 90%; */
        position: relative;
        overflow-y: scroll;
    }

    .watch-container-middle {
        flex: 0.525;
        align-self: center;
    }

    .watch-container-right {
        min-width: 0;
        flex: 0.3;
        align-self: stretch;
    }
}

[watch-type="recresc"], [watch-type="shinjuku"], [watch-type="3col"] {
    .watch-container-rightaction {
        min-height: 0;
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
    }
    .stacker-wrapper {
        min-height: 0;
    }
}

[watch-type="shinjuku"] {
    --radius: 0px;
    --radius-mini: 0px;
    --radius-big: 0px;
    .watch-container-left {
        display: none;
    }

    .watch-container-right {
        display: none;
    }

    .watch-container-top {
        gap: 1em;
        flex-wrap: wrap;
        margin: 0 10%;
        .searchbox-container {
            flex-basis: 100%;
        }
    }

    .stacker-container {
        /* display: none; */
    }

    .watch-container-middle .watch-container-rightaction {
        position: relative;
        flex: 1;
        gap: 4px;
    }

    .watch-container-middle {
        flex-basis: 80%;
        position: relative;
        display: flex;
        gap: 0.5em;
        outline: 3px solid #000;
        border: 1px solid;
        border-image: linear-gradient(#c7c7c7,#d1d1d1) 1;
        padding: 6px;
        background: linear-gradient(#222, #333);
    }
    .player-container {
        padding: 0;
        flex: 2.5;
        border: 1px solid #000;
    }

    .stacker-tabbutton-container {
        padding: 0 2em;
        gap: 0;
        position: relative;
        top: 3px;
    }

    .stacker-tabbutton {
        border: 3px solid var(--textcolor3);
        font-size: 0.8em !important;
        border-bottom: 3px solid var(--textcolor3);
    }

    .stacker-tabbutton.stacker-tabbutton-active {
        border-bottom: 3px solid transparent;
    }

    .stacker-tabbutton:not(:last-child) {
        border-right: none;
    }

    .stacker-content {
        border: 3px solid var(--textcolor3);
    }

    .video-actions button {
        background-image: linear-gradient(#4f4f4f, #101010);
        color: #fff;
        border: 1px solid #000;
        border-radius: 6px;
        padding: 6px;
        font-size: 1em;
    }

    .video-actions {
        gap: 7px;
        font-size: 0.8em;
        margin-bottom: 0;
        height: fit-content;
        align-self: end;
    }

    .video-actions button svg {
        width: 1.5em;
        height: 1.5em;
    }
    .playercontroller-container[player-type="shinjuku"] {
        border-bottom: 1px solid #000;
    }

    .commentinput-container > * {
        padding: 2px 6px;
    }
    .commentinput-container svg {
        height: 1.5em;
        width: 1.5em;
    }

    .commentinput-submit {
        background: linear-gradient(#ff9e3c 1%,#ffa114 40%,#ff5919 60%,#f4781a 100%);
        color: #fff;
        font-weight: bold;
        text-shadow: 0 0 2px #000;
    }
    .commentinput-submit:hover {
        background: linear-gradient(#ffac59 1%, #ffab2d 40%, #ff8d2d 60%, #ff9646 100%);
    }

    .videoinfo-container details {
        border: 2px solid var(--textcolor1);
    }

    .videostat-container {
        font-size: 13px;
        font-family: "MS Gothic", sans-serif;
        background: #222;
        color: #fff;
        width: fit-content;
        white-space: nowrap;
        display: flex;
        gap: 0.5em;
        width: 100%;
    }
    .videostat-left-container {
        font-weight: bold;
        border: 1px solid #000;
        flex: 1;
    }

    .videostat-left-container > div {
        padding: 1px;
        background: linear-gradient(#333, #111, #333);
        display: flex;
        gap: 1em;
    }

    .videostat-left-container > div:not(:last-child) {
        border-bottom: 1px solid #000;
    }

    .videostat-left-container > div > span:last-child {flex: 1;text-align: right;padding: 1px;}

    .videostat-left-container > div > span:first-child {
        letter-spacing: -2px;
    }

    .videostat-right-container {
        flex: 1.8;
        text-align: center;
    }

    .videostat-right-top-dummy {
        border: 1px solid #000;
        padding: 4px;
        margin-bottom: 5px;
        background: linear-gradient(#494949 2%, #1a1a1a 49%, #141414 50%, #202020 100%);
        color: #fff3;
    }

    .videostat-clock {
        border: 1px solid #000;
        padding: 6px;
        background: linear-gradient(#555, #888 30%, #555);
        letter-spacing: 0;
        box-shadow: 0px 0px 4px #000c inset;
    }

    .watch-container-rightaction-hjleft {
        display: flex;
        align-items: center;
        gap: 1em;
    }

    .watch-container-rightaction-hjleft .video-actions {
        flex-wrap: wrap;
        justify-content: left;
    }

    .video-action-likethanks-outercontainer {
        z-index: 1;
        transform: translate(0, 2.5em);
        max-width: 500px;
        left: inherit;
        right: inherit;
        top: inherit;
        bottom: inherit;
    }

    .videoowner-container {
        border: 2px solid var(--accent2);
        padding: 8px;
        background: var(--bgcolor3);
        a {
            color: var(--textcolor1);
            display: flex;
            text-decoration: none;
            font-size: 0.9em;
            align-items: center;
            gap: 8px;
            img {
                width: 3.5em;
                height: 3.5em;
                vertical-align: middle;
                border: 3px solid var(--bgcolor3);
            }
            span {
                text-decoration: underline;
                font-weight: bold;
                font-size: 1.1em
            }
        }
    }

    .uploaddate {
        color: var(--textcolor2);
        span {
            font-weight: bold;
            color: var(--textcolor1);
        }
    }
}


body {
    background: var(--bgcolor1);
    color: var(--textcolor1);
    margin: 0;
}
// font-family を Stylus-langが正しく解釈しないようなので、@cssを使う
@css {
    body {
        font-family: Avenir, Lato, -apple-system, BlinkMacSystemFont, "Helvetica Neue", "Hiragino Kaku Gothic ProN", Meiryo, メイリオ, sans-serif
    }
}
a {
    color: var(--linktext1)
}

.container {
    margin: 0 auto;
    //overflow: scroll;
}
.container.fullscreen {
    overflow: hidden
}
.global-flex {
    display: flex
    .global-flex1 {
        flex: 1
    }
}
.global-bold {
    font-weight: bold;
}

.watch-container {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: center;
    margin: 0 auto;
    max-width: 98vw;
    .watch-container-left {
        min-width: 480px;
        flex: 0.6;
    }
    .watch-container-right {
        max-width: 25vw;
        height: auto;
        align-self: stretch;
        position: relative;
        min-width: 400px;
        flex: 0.4;
    }
    ::-webkit-scrollbar {
        background: var(--bgcolor3)
        width: 16px;
        height: 16px;
    }
    ::-webkit-scrollbar-thumb {
        background: var(--textcolor3)
        border-radius: 4px;
        margin: 0 4px;
    }
}

.watch-container:not([watch-type="3col"]) {
    .watch-container-left[settings-size="0"] {
        flex: 0.4
    }
    .watch-container-left[settings-size="1"] {
        flex: 0.6
    }
    .watch-container-left[settings-size="2"] {
        flex: 1
    }
}

[watch-type="3col"] {
    .watch-container-left {
        flex: 0.2;
        min-width: 0;
        align-self: stretch;
        /* height: 90%; */
        position: relative;
        overflow-y: scroll;
    }

    .watch-container-middle {
        flex: 0.525;
        align-self: center;
    }

    .watch-container-right {
        min-width: 0;
        flex: 0.3;
        align-self: stretch;
    }
}

@import './watchUI/*.styl'

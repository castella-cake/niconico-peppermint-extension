body {
    background: var(--bgcolor1)
    color: var(--textcolor1)
    /* 基本背景色 */
    --bgcolor1: #252525;
    /* サブ背景色1 */
    --bgcolor2: #333;
    /* サブ背景色2 */
    --bgcolor3: #666;
    --bgcolor4: #aaa;
    --bgcolorab: rgba(#252525, 0.25);
    --bgcoloraw: rgba(#fff, 0.25);
    --textcolor1: #fff;
    --textcolor2: #ddd;
    --textcolor3: #aaa;
    --textcolornew: #e05050;
    --accent1: #444;
    --accent2: #888;
    --hover1: #666;
    --hover2: #aaa;
    --linktext1: #8fb9df;
    --linktext2: #8ed9ff;
    --linktext3: #008acf;
    --nicoru1: rgba(201,168,62,0.1);
    --nicoru2: rgba(201,168,62,0.2);
    --nicoru3: rgba(201,168,62,0.35);
    --nicoru4: rgba(201,168,62,0.5);
    --dangerous1: rgb(245, 71, 71)
}
a {
    color: var(--linktext1)
}
.container {
    width: 95vw;
    margin: 0 auto;
}
.watch-container {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    .watch-container-left {
        min-width: 480px;
        flex: 1;
    }
    .watch-container-right {
        min-width: 400px;
        max-width: 25vw;
    }
}
.videoinfo-container {
    background: var(--bgcolor2)
    padding: 8px;

    .videotitle {
        font-size: 20px;
        font-weight: bold;
        span {
            font-size: 14px;
            opacity: 0.5;
            font-weight: normal;
        }
    }
}
.tags-container {
    display: flex
    flex-wrap: wrap;
    margin-top: 8px;

    .tags-item {
        margin-right: 8px;
        border-bottom: 2px solid var(--accent1)
    }
    .tags-item-locked {
        border-bottom: 2px solid rgba(255, 255, 0, 0.5)
    }
}

.recommend-container {
    .recommend-item {
        display: flex;
        gap: 8px;
        height: 4em
        text-decoration: none;
        margin-bottom: 8px;
        img {
            flex-shrink: 0;
        }
        div {
            flex: 1;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            align-self: center;
            color: var(--textcolor1);
            span {
                opacity: 0.5;
            }
        }
    }
}

.player-container {
    padding: 8px;
}
.player-video-container {
    aspect-ratio: 16 / 9;
    position: relative;
    video {
        width: 100%;
        height: 100%
    }
    canvas {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
    }
}

@import './watchUI/commentList.styl'
@import './watchUI/playerController.styl'

.vefx-container {
    display: flex;
    flex-direction: column;
    position: relative;
    left: 0;
    bottom: 160px;
    padding: 0;
}
.vefx-container-inner {
    position: absolute;
    right: 20px;
    padding: 16px;
    background: var(--bgcolor1);
    bottom: -100px;
    width: 16em;
    height: 32em;
    overflow-y: scroll;
    > div {
        display: flex;
        input[type="range"] {
            flex: 1;
        }
        label {
            flex: 0.6
        }
    }
    > label {
        display: block;
    }
    .vefx-title {
        font-weight: bold;
    }
}
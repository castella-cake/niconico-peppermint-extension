[watch-type="shinjuku"] {
    --radius: 0px;
    --radius-mini: 0px;
    --radius-big: 0px;
    --box-shadow: none;
    .watch-container-left {
        display: none;
    }

    .watch-container-right {
        display: none;
    }

    .watch-container-top {
        gap: 1em;
        flex-wrap: wrap;
        margin: 0 10%;
        .searchbox-container {
            flex-basis: 100%;
        }
    }

    .stacker-container {
        /* display: none; */
    }

    .shinjuku-player-container .watch-container-rightaction {
        position: relative;
        flex: 1;
        gap: 4px;
    }

    .shinjuku-player-container {
        flex-basis: 80%;
        position: relative;
        display: flex;
        gap: 0.5em;
        outline: 3px solid #000;
        border: 1px solid;
        border-image: linear-gradient(#c7c7c7,#d1d1d1) 1;
        padding: 6px;
        background: linear-gradient(#222, #333);
    }
    .player-container {
        padding: 0;
        flex: 2.5;
        border: 1px solid #000;
    }

    .stacker-tabbutton-container {
        padding: 0 2em;
        gap: 0;
        position: relative;
        top: 3px;
    }

    .stacker-tabbutton {
        border: 3px solid var(--textcolor3);
        font-size: 0.8em !important;
        border-bottom: 3px solid var(--textcolor3);
    }

    .stacker-tabbutton.stacker-tabbutton-active {
        border-top: 3px solid var(--textcolor3);
        border-bottom: 3px solid transparent;
    }

    .stacker-tabbutton:not(:last-child) {
        border-right: none;
    }

    .stacker-content {
        border: 3px solid var(--textcolor3);
    }

    .video-actions button, .video-actions button.video-action-likebutton.active {
        background-image: linear-gradient(#4f4f4f, #101010);
        color: #fff;
        border: 1px solid #000;
        border-radius: 6px;
        padding: 6px;
        font-size: 1em;
    }

    .video-actions {
        gap: 7px;
        font-size: 0.8em;
        margin-bottom: 0;
        height: fit-content;
        align-self: end;
        justify-content: right;
    }

    .video-actions button svg {
        width: 1.5em;
        height: 1.5em;
    }
    .playercontroller-container[player-type="shinjuku"] {
        border-bottom: 1px solid #000;
    }

    .commentinput-container > * {
        padding: 2px 6px;
    }
    .commentinput-container svg {
        height: 1.5em;
        width: 1.5em;
    }

    .commentinput-submit {
        background: linear-gradient(#ff9e3c 1%,#ffa114 40%,#ff5919 60%,#f4781a 100%);
        color: #fff;
        font-weight: bold;
        text-shadow: 0 0 2px #000;
    }
    .commentinput-submit:hover {
        background: linear-gradient(#ffac59 1%, #ffab2d 40%, #ff8d2d 60%, #ff9646 100%);
    }

    .videoinfo-container details {
        border: 2px solid var(--textcolor1);
    }

    .videostat-container {
        font-size: 13px;
        font-family: "MS Gothic", sans-serif;
        background: #222;
        color: #fff;
        width: fit-content;
        white-space: nowrap;
        display: flex;
        gap: 0.5em;
        width: 100%;
    }
    .videostat-left-container {
        font-weight: bold;
        border: 1px solid #000;
        flex: 1;
    }

    .videostat-left-container > div {
        padding: 1px;
        background: linear-gradient(#333, #111, #333);
        display: flex;
        gap: 1em;
    }

    .videostat-left-container > div:not(:last-child) {
        border-bottom: 1px solid #000;
    }

    .videostat-left-container > div > span:last-child {flex: 1;text-align: right;padding: 1px;}

    .videostat-left-container > div > span:first-child {
        letter-spacing: -2px;
    }

    .videostat-right-container {
        flex: 1.8;
        text-align: center;
    }

    .videostat-right-top-dummy {
        border: 1px solid #000;
        padding: 4px;
        margin-bottom: 5px;
        background: linear-gradient(#494949 2%, #1a1a1a 49%, #141414 50%, #202020 100%);
        color: #fff3;
    }

    .videostat-clock {
        border: 1px solid #000;
        padding: 6px;
        background: linear-gradient(#555, #888 30%, #555);
        letter-spacing: 0;
        box-shadow: 0px 0px 4px #000c inset;
    }

    .watch-container-rightaction-hjleft {
        display: flex;
        align-items: center;
        gap: 1em;
    }

    .watch-container-rightaction-hjleft .video-actions {
        flex-wrap: wrap;
        justify-content: left;
    }

    .video-action-likethanks-outercontainer {
        z-index: 10;
        transform: translate(0, 2.5em);
        max-width: 500px;
        left: inherit;
        right: inherit;
        top: inherit;
        bottom: inherit;
    }

    .videoowner-container {
        border: 2px solid var(--accent2);
        padding: 8px;
        background: var(--bgcolor3);
        height: fit-content;
        a {
            color: var(--textcolor1);
            display: flex;
            text-decoration: none;
            font-size: 0.9em;
            align-items: center;
            gap: 8px;
            img {
                width: 3.5em;
                height: 3.5em;
                vertical-align: middle;
                border: 3px solid var(--bgcolor3);
            }
            span {
                text-decoration: underline;
                font-weight: bold;
                font-size: 1.1em
            }
        }
    }

    .videoinfo-container {
        padding: 0;
    }

    .uploaddate {
        color: var(--textcolor2);
        span {
            font-weight: bold;
            color: var(--textcolor1);
        }
    }

    .hrjk-header {
        grid-area: shr;
        display: flex;
        gap: 1em;
        align-items: center;

        .harajuku-logo {
            display: block;
            height: max-content;
            > img {
                filter: var(--hrjk-logo-filter);
                height: 100%;
                width: auto;
            }
        }
        .harajuku-header-migiue-filler {
            background: #0001;
            flex: 1;
            height: 100%;
            margin-left: 20%;
            text-align: center;
            line-height: 100%;
            color: #0002;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }

    .searchbox-inputcontainer input {
        padding: 6px;
    }

    .searchbox-type-item {
        font-size: 0.8em;
        padding: 2px 8px !important;
    }
}
.playersettings-container {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 30%;
    height: 100%;
    background: rgba(0,0,0,0.867);
    color: #fff;
    backdrop-filter: blur(8px);
    padding: 16px;
    z-index: 2;
    min-width: 300px;
    overflow: auto;
    cursor: auto; // 動画の上で動いてない判定されてカーソルが見えなくならないように
    p {
        font-size: 0.9em;
    }
    .playersettings-item {
        margin-bottom: 8px;
        label {
            font-size: 0.8em;
            select {
                margin-left: 8px;
                background: #333;
                color: #fff;
                border-radius: var(--radius);
                padding: 4px;
                border: none;
                cursor: pointer;
                &:hover, &:focus {
                    background: #555;
                }
            }
        }
        .playersettings-hint {
            font-size: 0.8em;
        }
    }
}
.playersettings-title {
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 8px;
}
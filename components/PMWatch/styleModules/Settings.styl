.playersettings-container {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 30%;
    //height: 100%;
    background: #111e;
    color: #fff;
    backdrop-filter: blur(8px);
    padding: 16px;
    z-index: 2;
    min-width: 300px;
    overflow: auto;
    cursor: auto; // 動画の上で動いてない判定されてカーソルが見えなくならないように
    margin: 4px;
    border-radius: 6px;
    border: 1px solid #555a;
    box-shadow: 0px 0px 4px #000
    p {
        font-size: 0.9em;
    }
    .playersettings-item {
        margin-bottom: 8px;
        border-top: 1px solid #fff3;
        padding-top: 8px;
        line-height: 0.8rem
        label {
            font-size: 0.8rem;
            select {
                margin-left: 8px;
                background: #333;
                color: #fff;
                border-radius: var(--radius);
                padding: 4px;
                border: none;
                cursor: pointer;
                &:hover, &:focus {
                    background: #555;
                }
            }
        }
        .playersettings-hint {
            font-size: 0.7rem;
            opacity: 0.8;
            margin-top: 2px;
        }
    }
    &::-webkit-scrollbar {
        background: transparent;
    }
}
.playersettings-title {
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 8px;
}
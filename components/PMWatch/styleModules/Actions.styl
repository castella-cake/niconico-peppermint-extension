.video-actions {
    margin-bottom: 8px;
    display: flex;
    gap: 8px;
    justify-content: center;
    
    > button {
        background: var(--bgcolor2);
        color: var(--textcolor1);
        border: var(--border);
        border-radius: var(--radius-mini);
        box-shadow: var(--box-shadow);
        padding: 4px 8px;
        font-family: inherit;
        font-size: 0.9em;
        display: flex;
        align-items: center;
        gap: 0.25em;
        flex-wrap: wrap;
        svg,span {
            vertical-align: bottom;
        }
        span {
            white-space: nowrap;
        }
    }
}

.watch-container:not([watch-type="shinjuku"]) .video-actions {
    > button {
        transition: background 0.1s ease;
    }
    > .video-action-likebutton svg.tabler-icon-heart-filled {
        color: var(--likecolor, #FF5588);
    }
    > .video-action-likebutton:hover {
        background: var(--likebg, #502834);
    }
    > .video-action-likebutton[is-liked="true"] {
        border: 1px solid var(--likecolor, #FF5588);
        background: var(--likebg, #502834);
    }
}
.video-actions {
    > button.video-action-disabled {
        color: var(--bgcolor4);
    }

    > button:not(.video-action-disabled):hover {
        background: var(--hover1);
        color: var(--textcolor1);
        cursor: pointer;
    }
}


.video-action-likethanks-outercontainer {
    position: absolute;
    right: 0;
    left: 0;
    display: flex;
    flex-direction: row-reverse;
    pointer-events: none;
    top: 24px;
    z-index: 3;
}

.video-action-likethanks-container {
    padding: 8px;
    background: var(--modal-background);
    border-radius: var(--radius);
    margin-top: 1em;
    position: relative;
    font-size: 0.9em;
    pointer-events: all;
    box-shadow: 0px 0px 8px var(--bgcolor1);
    width: 100%;
    button {
        background: transparent;
        border: none;
        color: var(--textcolor1);
        cursor: pointer;
        .tabler-icon {
            height: 1.25em;
            vertical-align: middle;
        }
    }
}


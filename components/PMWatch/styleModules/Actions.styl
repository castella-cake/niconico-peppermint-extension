.video-action-likethanks-icon {
    height: 3em;
    align-self: center;
    border-radius: var(--radius);
    object-fit: contain;
}

.video-action-likethanks-arrow {
    clip-path: polygon(0 50%, 100% 0, 100% 100%);
    align-self: center;
    width: 1em;
    height: 1em;
    background: var(--accent1);
    margin-left: 4px;
    margin-right: 0;
}

.video-action-likethanks-title {
    align-items: center;
}
.video-action-likethanks-body {
    font-size: 1rem;
    background: var(--accent1);
    border-radius: var(--radius-mini);
    padding: 4px 8px;
    margin-top: 6px;
    line-height: 2em;
}
.watch-container-rightaction {
    display: flex;
    flex-direction: column;
    position: relative;
}

.watch-container {
    &[settings-size="0"] {
        --padding: 16%;
    }
    &[settings-size="1"] {
        --padding: 8%;
    }
    &[settings-size="2"] {
        --padding: 1%;
    }
}

.watch-container-grid {
    display: grid !important; 
    padding: 0 var(--padding);
    grid-auto-rows: 1fr; 
    grid-template-columns: 1fr 8% calc(18% + var(--padding) / 2);
    grid-template-rows: repeat(3, max-content);
    gap: 0.5em 0.5em; 
    /*grid-template-areas: 
        "vid act act"
        "inf rec rec"
        "btm rec rec"
        "sch rec rec"
        "sch rec rec"; */
    grid-template-areas: "inf inf sch" "vid act act" "rec rec rec" "btm btm btm" "btm btm btm";
}

[watch-type="renew"] .watch-container-grid {
    grid-template-areas: "vid act act" "inf rec rec" "btm rec rec" "sch rec rec";
}

[watch-type="stacked"] .watch-container-grid {
    grid-template-areas: "vid act act" "btm rec rec" "sch rec rec" "sch rec rec";
}

[watch-type="3col"] .watch-container-grid {
    grid-template-columns: 20% 1fr 20%; 
    grid-template-rows: repeat(4, max-content);
    grid-template-areas: "tit tit tit" "inf vid act" "rec rec rec" "btm btm btm" "sch sch sch";
}

[watch-type="shinjuku"] .watch-container-grid {
    grid-template-rows: repeat(6, max-content);
    grid-template-areas: "sch sch sch" "inf inf own" "inf inf sac" "spl spl spl" "rec rec rec" "btm btm btm" "btm btm btm";
}

.watch-container-grid {
    > .player-container {
        grid-area: vid;
    }

    > .watch-container-rightaction {
        grid-area: act;
    }

    > .recommend-wrapper {
        grid-area: rec;
    }

    > .videoinfo-container {
        grid-area: inf;
    }

    > .bottominfo-container {
        grid-area: btm;
    }

    > .searchbox-container {
        grid-area: sch;
    }

    > .videotitle-container {
        grid-area: tit;
    }

    > .owner-container {
        grid-area: own;
    }

    > .video-actions {
        grid-area: sac;
    }
    > .shinjuku-player-container {
        grid-area: spl;
    }
}



